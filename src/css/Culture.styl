
.Culture_{
  .content {
    width: 1200px
    margin 0 auto
    margin-bottom 40px
    position relative
    .crumbs{
      font-size: 14px;
      color: #999999;
      line-height: 26px;
      margin 10px 0
    }
    .New_wrap{
      display flex
      .nav_left{
        width: 180px
        margin-right 35px
        .wrap_left{
          position relative
          top:0
          left:0
          background: #fff
          position sticky
          top:0
          left:0
          &.active{
            position sticky
            top:0
            left:0
          }
          .navHeader{
            width: 180px;
            height: 65px;
            background-color: rgba(0, 92, 161, 1);
            display flex
            align-items center
            justify-content center
            >img{
              width: 25px
              height: 30px
              margin-right 10px
            }
            .card_{
              >p{
                font-weight: 700;
                font-style: normal;
                color: #FFFFFF;
                font-size 18px
              }
              >span{
                font-size: 14px;
                color: #FFFFFF;
              }
            }
          }
          .navList{
            .item_nav{
              margin-top 10px
              height: 50px
              width: 180px
              background-color: rgba(242, 242, 242, 1);
              display flex
              align-items center
              justify-content center
              cursor: pointer
              font-weight: 700;
              font-size: 16px;
              color: #666666;
              position relative
              &:before{
                content: ''
                display none
                width: 10px
                height: 100%
                background: #005CA1
                position absolute
                top: 0
                left: 0
              }
              &.active{
                color: #005CA1
                &:before{
                  display block
                }
              }
            }
          }

        }

      }
      .content_right{
        flex 1
        .yj_culture{
          display flex
          flex-direction column
          align-items center
          .bg_img{
            width: 957px;
            //height: 333px;
            display block
          }
          .content_wrap{
            margin 40px 0
            .title{
              text-align: center
              font-size: 22px
              color: #005CA1
              margin-bottom 30px
            }
            >p{
              line-height:26px
              font-size: 16px
              color: #999
              text-indent: 2em;
            }
          }
        }
      }
    }
  }
}
